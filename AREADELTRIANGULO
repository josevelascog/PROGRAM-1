#include "stdafx.h"
#include <iostream>
#include "conio.h"

using namespace std;

void main()
{
	float area, base, altura;
	cout<<"Ingresa la base"<<endl;
	cin>>base;
	cout<<"Ingresa la altura"<<endl;
	cin>>altura;
	area=base*altura/2;
	cout<<"El area de tu triangulo es...";
	cout<<area<<endl;
	system ("pause");
}
