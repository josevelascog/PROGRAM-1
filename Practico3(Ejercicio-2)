// Practico3-2.cpp : Defines the entry point for the console application.
//

#include "stdafx.h"
#include <iostream>
#include "conio.h"

using namespace std;

int serie(int n);

void main ()
{
	int n, s=0;
	cout<<"Ingrese el limite de la serie: "<<endl;
	cin>>n;

	s=serie(n);
	cout<<"El resultado de la serie es: "<<s<<endl;
	getch();
}

int serie(int n)
{
	int s=0;
	for(int i=1;i<=n;i++)
	{
		s=s+i;
		i++;
	}
	return s;
}


